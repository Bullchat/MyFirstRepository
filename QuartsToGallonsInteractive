import java.util.Scanner;

public class DebugTwo4 {
    public static void main(String[] args) {
        double cost;
        final double TAX = 0.06;
        Scanner input = new Scanner(System.in);
        
        System.out.print("Enter cost of purchase >> ");
        cost = input.nextDouble(); // Changed next() to nextDouble()
        
        System.out.println("Cost is $" + cost); // Corrected the concatenation
        System.out.println("With " + (TAX * 100) + "% tax,"); // Corrected tax percentage calculation
        System.out.println("   the total is $" + (cost + cost * TAX)); // Fixed typo in println()
    }
}
