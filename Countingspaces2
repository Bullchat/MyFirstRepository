
import java.util.Scanner;

public class CountSpaces2 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Prompt user to enter a quote
        System.out.print("Enter a quote: ");
        String quote = scanner.nextLine();

        int spaceCount = 0;

        // Loop through each character in the quote
        for (int i = 0; i < quote.length(); i++) {
            if (quote.charAt(i) == ' ') {
                spaceCount++;
            }
        }

        // Display the number of spaces
        System.out.println("The total number of spaces in the quote is: " + spaceCount);
        
        scanner.close();
    }
}
